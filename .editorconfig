; EditorConfig is awesome: http://EditorConfig.org

root = true  ; top-most EditorConfig file

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.html]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.styl]
indent_style = space
indent_size = 2

[design/*.html]
indent_size = 4

[design/*.js]
indent_size = 4

[design/*.css]
indent_size = 4
